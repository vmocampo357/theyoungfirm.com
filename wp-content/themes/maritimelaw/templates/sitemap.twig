{% extends 'base-page.twig' %}

{% block page_body %}

    <style>
        .page-list .children{
            margin-left:10px;
        }
        .page_item{
            list-style-type: none;
            display:block;
            margin-bottom:5px;
        }
        .page-item *{
            display:block;
            margin-bottom:10px;
            padding-bottom:10px;
        }
        .page_item_has_children > a{
            border-bottom:1px solid black;
            display:block;
            margin-bottom:10px;
        }
        .children .page-item a{
            margin-bottom:0px !important;
            padding-bottom:0px !important;
        }
        .page-list .children .page-item{
            list-style-type: square;
        }
    </style>

    <div id="jal-any-element-primary" class="even-cols col-xs-12 jal-any-element-body">
        <div class="force-780">
            <div class="row">
                <div class="col-md-12">
                    {{ post.content }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 content page-list">
                    <h2>All Pages</h2>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            {{ pages }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 content">
                    {% for custom_post in custom_posts %}
                        {% if custom_post.posts|length > 0 %}
                            <h2>{{ custom_post.label }}</h2>
                            <hr />
                            <div class="row">
                                {% for post in custom_post.posts %}
                                    <div class="col-sm-6">
                                        <ul>
                                            {% if post|length > 0 %}
                                                <li><a href="{{ post.link }}">{{ post.title }}</a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12 content">
                    {% for cat in terms %}
                        {% if posts[cat.slug]|length > 0 %}
                            <h2>{{ cat.name }} Posts</h2>
                            <hr />
                            <div class="row">
                                {% for row in posts[cat.slug]|batch(5) %}
                                    <div class="col-sm-6">
                                        <ul>
                                            {% for post in row %}
                                                {% if post|length > 0 %}
                                                    <li><a href="{{ post.link }}">{{ post.title }}</a></li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <br />
        </div>
    </div>

{% endblock %}